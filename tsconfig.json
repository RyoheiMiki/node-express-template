{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "strict": false,
    "allowJs": true
  },
  "include": [
    "./src/**/*"
  ]
}